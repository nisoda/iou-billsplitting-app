<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="a.myapplication1.ViewMoreFriend">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="67dp"
        android:id="@+id/imageView"
        android:layout_gravity="right"
        android:src="@android:drawable/sym_def_app_icon"
        android:layout_weight="0.06" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/friendNameText"
        android:textColor="#ff000000"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_alignParentEnd="false"
        android:layout_toRightOf="@+id/imageView"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignBottom="@+id/imageView"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/friendPhoneText"
        android:textColor="#ff000000"
        android:textStyle="italic"
        android:layout_below="@+id/friendNameText"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_alignLeft="@+id/friendNameText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/friendEmailText"
        android:textColor="#ff000000"
        android:textStyle="italic"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/friendPhoneText"
        android:layout_alignLeft="@+id/friendPhoneText" />

</RelativeLayout>
