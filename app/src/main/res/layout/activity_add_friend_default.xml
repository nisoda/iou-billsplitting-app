<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="a.myapplication1.AddFriendDefault">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="@dimen/button_height"
            android:id="@+id/friendNameText"
            android:layout_alignParentTop="true"
            android:editable="true"
            android:enabled="true"

            android:clickable="true"
            android:hint="Friend Name (required)"
            android:paddingLeft="16dp"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" /><!--android:background="#ffA2BFF4"-->

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="@dimen/button_height"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/phoneText"

            android:editable="true"
            android:clickable="true"
            android:elegantTextHeight="false"
            android:hint="Phone Number"
            android:paddingLeft="16dp"
            android:layout_below="@+id/friendNameText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" /> <!--android:background="#ffA2BFF4"-->

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="@dimen/button_height"
        android:id="@+id/emailText"
        android:editable="true"
        android:enabled="true"

        android:clickable="true"
        android:hint="E-mail Address"
        android:layout_below="@+id/phoneText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="16dp"
        android:singleLine="true"
        android:layout_marginTop="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" /><!--android:background="#ffA2BFF4"-->

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/button_height"
        android:text="@string/button_done"
        android:id="@+id/addButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/emailText"

        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:onClick="saveFriend" />
    <!--android:background="#ff66ff33"-->
</RelativeLayout>
