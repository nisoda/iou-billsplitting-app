<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="a.myapplication1.ViewMoreBill"
    android:background="@color/light_blue">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="67dp"
        android:id="@+id/billImageView"
        android:layout_gravity="right"
        android:src="@android:mipmap/sym_def_app_icon"
        android:layout_weight="0.06" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/billNameText"
        android:textColor="#ff000000"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_alignParentEnd="false"
        android:layout_toRightOf="@+id/billImageView"
        android:layout_alignTop="@+id/billImageView"
        android:layout_alignBottom="@+id/billImageView"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/billDateText"
        android:textColor="#ff000000"
        android:textStyle="italic"
        android:layout_below="@+id/billNameText"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_alignLeft="@+id/billNameText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/billAmountText"
        android:textColor="#ff000000"
        android:textStyle="italic"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/billDateText"
        android:layout_alignLeft="@+id/billDateText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/billTipText"
        android:textColor="#ff000000"
        android:textStyle="italic"
        android:layout_below="@+id/billAmountText"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_alignLeft="@+id/billAmountText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/billTaxText"
        android:textColor="#ff000000"
        android:textStyle="italic"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/billTipText"
        android:layout_alignLeft="@+id/billTipText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/billTotalText"
        android:textColor="#ff000000"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:textStyle="bold|italic"
        android:layout_alignLeft="@+id/billTaxText"
        android:layout_below="@+id/billTaxText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/billParticipantsText"
        android:textColor="#ff000000"
        android:textStyle="italic"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/billTotalText"
        android:layout_alignLeft="@+id/billTotalText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/billAmtPerText"
        android:textColor="#ff000000"
        android:textStyle="italic"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/billParticipantsText"
        android:layout_alignLeft="@+id/billParticipantsText" />

</RelativeLayout>
